<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor"
    tools:context=".Activity.BookDetailPayActivity">
    <include layout="@layout/toolbarlayout"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundcolor"
        android:layout_below="@id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <RatingBar
                android:id="@+id/ratingbar_book_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleIndicator"
                android:rating="4.5"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/txtDanhgiasachpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="5 điểm"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_book_detail_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTintMode="multiply"
                android:baseline="@android:dimen/app_icon_size"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarTrackHorizontal="@drawable/book"
                android:src="@drawable/gmbapdful" />
            <TextView
                android:id="@+id/txtTensach_detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="?attr/textcolor"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:text="ten sach" />
            <TextView
                android:id="@+id/txtChitiet_detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/textcolor"
                android:textSize="12dp"
                android:fontFamily="casual"
                android:text="Chi tieets" />

            <Button
                android:id="@+id/btn_view_book"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/buttoncolor"
                android:layout_gravity="center"
                android:textColor="?attr/textcolor"
                android:text="Đọc sách ngay!"/>

            <TextView
                android:id="@+id/txtTitledg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="Đánh giá sách này"/>

            <RatingBar
                android:id="@+id/ratingbarBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:numStars="5"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/linearlayoutnx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_danhgia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/txtDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_arrow_drop_down"
                android:layout_gravity="center"
                android:text="Xem tất cả nhận xét"/>
            <TextView
                android:id="@+id/txtUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_arrow_drop_up"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="Ẩn bới nhận xét"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>