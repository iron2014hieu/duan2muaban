<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/gmbapdful"/>

        <TextView
            android:id="@+id/txtTensach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="?attr/textcolor"
            android:gravity="center"
            android:text="ten sach"/>
        <TextView
            android:id="@+id/txtGiaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="?attr/textcolor"
            android:text="txtGiaban"/>

        <TextView
            android:id="@+id/txtThanhtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:gravity="center"
            android:text="than tien"/>
        <TextView
            android:id="@+id/txtDathanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chua thanh toán"/>
        <TextView
            android:id="@+id/txtXoagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_delete_sweep"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Xóa giỏ hàng này"/>
        <TextView
            android:id="@+id/btnThanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_payment"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Thanh toan ngay"/>

    </LinearLayout>
</ScrollView>